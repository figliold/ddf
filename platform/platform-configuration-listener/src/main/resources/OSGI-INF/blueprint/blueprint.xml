<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.2.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <ext:property-placeholder/>

    <reference id="configurationAdmin" interface="org.osgi.service.cm.ConfigurationAdmin"/>

    <bean id="felixFileHandler" class="org.codice.ddf.configuration.listener.FelixFileHandler" scope="singleton"/>

    <bean id="configurationHandler" class="org.codice.ddf.configuration.listener.ConfigurationHandler">
        <argument ref="blueprintBundleContext"/>
        <argument ref="felixFileHandler"/>
        <argument value="${ddf.home}"/>
    </bean>

    <bean id="watcherThread" class="java.util.concurrent.Executors" factory-method="newSingleThreadExecutor">
    </bean>

    <bean id="defaultFileSystem" class="java.nio.file.FileSystems" factory-method="getDefault">
    </bean>

    <bean id="configurationWatchService" factory-ref="defaultFileSystem" factory-method="newWatchService">
    </bean>

    <bean id="configurationObserver" class="org.codice.ddf.configuration.watcher.ConfigurationObserver"
          init-method="init" destroy-method="destroy">
        <argument value="${ddf.home}/etc"/>
        <argument ref="configurationWatchService"/>
        <argument ref="watcherThread"/>
        <argument ref="felixFileHandler"/>
        <argument ref="configurationAdmin"/>
        <argument value=".config"/>
    </bean>

    <service ref="configurationHandler" interface="org.osgi.service.cm.ConfigurationListener"></service>

</blueprint>